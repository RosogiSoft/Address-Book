<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<GridPane alignment="center" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Controller">
   <columnConstraints>
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
   </rowConstraints>
   <children>
      <VBox prefHeight="626.0" prefWidth="438.0">
         <children>
            <HBox maxHeight="200.0" prefHeight="70.0" prefWidth="200.0">
               <children>
                  <Button mnemonicParsing="false" text="Добавить">
                     <HBox.margin>
                        <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
                     </HBox.margin>
                  </Button>
                  <Button mnemonicParsing="false" text="Удалить">
                     <HBox.margin>
                        <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
                     </HBox.margin>
                  </Button>
                  <Button mnemonicParsing="false" text="Изменить">
                     <HBox.margin>
                        <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
                     </HBox.margin>
                  </Button>
               </children>
            </HBox>
            <FlowPane prefHeight="70.0" prefWidth="200.0">
               <children>
                  <TextField prefWidth="300.0">
                     <FlowPane.margin>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                     </FlowPane.margin>
                  </TextField>
                  <Button mnemonicParsing="false" text="Поиск" />
               </children>
            </FlowPane>
            <FlowPane prefHeight="200.0" prefWidth="200.0">
               <children>
                  <TableView prefHeight="200.0" prefWidth="437.0">
                    <columns>
                      <TableColumn prefWidth="75.0" text="ФИО" />
                      <TableColumn prefWidth="75.0" text="Телефон" />
                    </columns>
                  </TableView>
               </children>
            </FlowPane>
            <HBox prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Label text="Количество записей">
                     <HBox.margin>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                     </HBox.margin>
                  </Label>
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</GridPane>
